# Configurações de Ambiente - PATATAG
# Copie este arquivo para .env e ajuste os valores

# Segurança
SECRET_KEY=gere-uma-chave-aleatoria-segura-aqui

# Banco de Dados
# Para SQLite (desenvolvimento):
DATABASE_URL=sqlite:///patatag.db

# Para PostgreSQL (produção):
# DATABASE_URL=postgresql://usuario:senha@localhost/patatag

# Para MySQL (produção):
# DATABASE_URL=mysql://usuario:senha@localhost/patatag

# Flask
FLASK_ENV=development
FLASK_DEBUG=True

# Servidor
HOST=0.0.0.0
PORT=5000

# Timeout do dispositivo (em minutos)
DEVICE_OFFLINE_TIMEOUT=15
